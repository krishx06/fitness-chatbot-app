generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model Message {
  id        String   @id @default(uuid())
  role      String   // 'user' or 'assistant'
  content   String
  createdAt DateTime @default(now())
  
  // Optional metadata
  personality String?
}
